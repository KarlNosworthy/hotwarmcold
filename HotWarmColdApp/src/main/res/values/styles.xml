<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/background_colour</item>
    </style>
    
    <style name="beacon_label_style">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="beacon_property_label_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="indicator_label_style">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    
    <color name="background_colour">#FFAAAAAA</color>
    <color name="cold_colour">#FF0000FF</color>
    <color name="warm_colour">#FFFFFF00</color>
    <color name="hot_colour">#FFFF0000</color>

</resources>
